<!--Homepage-->
<div class="container">
    <div class="col-md-12 jumbotron" id="ftm">
        <div class="text-center">
            <h1> Mongo Scraper (New York Times)</h1>
        </div>

    </div>
    <div class="col-md-12">
        {{#if article}}
            {{#each article}}
            <div class="panel panel-default" id="ftm1">
                <div  class="panel-heading">
                    <h4>{{this.title}}</h4>
                </div>
                <div class="panel-body" id="bgc">
                    <p> {{this.summary}}</p>
                    <a href={{this.link}} target="_blank">{{this.link}}</a>
                    <br><br>
                    <button type="button" class="btn btn-success save" data-id={{this._id}}>Save Article</button>
                </div>
            </div>
            {{/each}}
        {{else}}
        <div class="panel panel-default" id="ftm">
            <div class="panel-body">
            <h4>You don't have any Articles. Please Scrape Articles</h4>
            </div>
         </div>
        {{/if}}
    </div>
</div>
